<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItems">

    <TextView
        android:id="@+id/addItems_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Items"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/itemName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addItems_text"
        android:text="Item Name"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/itemName_text"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/unitPrice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:text="Unit Price"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/unitPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/unitPrice_text"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/thresholdUnit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unitPrice"
        android:text="Threshold Units"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/thresholdUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/thresholdUnit_text"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/currentUnits_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thresholdUnit"
        android:text="Current Units"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/currentUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/currentUnits_text"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <Button
        android:id="@+id/createRequisition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentUnits"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="New requisition"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/saveItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentUnits"
        android:background="@drawable/buttons"

        android:text="save"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="250dp"
        />



</RelativeLayout>