    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/site_name_textview"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"


        >
    </Spinner>

    <TextView
        android:id="@+id/further_details_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/site_name_textview"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:text="Further Details"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/further_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/further_details_textview"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchaseRequestDate"
        android:background="@drawable/buttons"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="360dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


