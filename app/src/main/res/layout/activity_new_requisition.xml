<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRequisition">

    <TextView
        android:id="@+id/new_requisition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="New Requisition"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/requester_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_requisition_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Requester Name"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/requesterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/requester_name_textview"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/purchase_request_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/requesterName"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Purchase Request Date"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/purchaseRequestDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchase_request_date_textview"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Select a date"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        android:drawableRight="@drawable/ic_baseline_calendar_today_24" />

    <TextView
        android:id="@+id/delivery_date_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchaseRequestDate"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Delivery Date"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/deliveryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivery_date_textview"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Select a date"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        android:drawableRight="@drawable/ic_baseline_calendar_today_24" />

    <TextView
        android:id="@+id/site_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliveryDate"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Site Name"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:padding="8dp"/>

