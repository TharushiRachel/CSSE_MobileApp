<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseOrder">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:background="#FFFACD"
        >

        <TextView
            android:id="@+id/stdetails_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site Manager Details"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site Manager Name"
            android:layout_below="@id/stdetails_text"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/name_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="215dp"
            />

        <TextView
            android:id="@+id/po_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PO Number"
            android:layout_below="@id/stdetails_text"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/poNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/name_text"
            android:padding="7dp"
            android:layout_marginLeft="215dp"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:id="@+id/pr_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PR Number"
            android:layout_below="@id/name"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/prNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/pr_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="285dp"
            />

        <TextView
            android:id="@+id/department_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department"
            android:layout_below="@id/name"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/department_text"
            android:padding="7dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="145dp"
            />

        <TextView
            android:id="@+id/vendor_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Type"
            android:layout_below="@id/name"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/vendor_text"
            android:padding="7dp"
            android:layout_marginLeft="285dp"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:id="@+id/orderDate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Date"
            android:layout_below="@id/prNumber"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/orderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/orderDate_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="285dp"
            />

        <TextView
            android:id="@+id/deliveryDate_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Date"
            android:layout_below="@id/department"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/deliveryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/deliveryDate_text"
            android:padding="7dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="145dp"
            />

        <TextView
            android:id="@+id/deliveryLocation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Location"
            android:layout_below="@id/vendor"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/deliveryLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/deliveryLocation_text"
            android:padding="7dp"
            android:layout_marginLeft="285dp"
            android:layout_marginRight="15dp"
            />


        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_below="@id/orderDate"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/email_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="285dp"
            />

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_below="@id/deliveryDate"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/phone_text"
            android:padding="7dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="145dp"
            />

        <TextView
            android:id="@+id/budget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Location"
            android:layout_below="@id/deliveryLocation"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/budget_text"
            android:padding="7dp"
            android:layout_marginLeft="285dp"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:background="#ADD8E6">

        <TextView
            android:id="@+id/vendordetails_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Details"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/vname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Name"
            android:layout_below="@id/vendordetails_text"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/vname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/vname_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="215dp"
            />

        <TextView
            android:id="@+id/vnumber_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:layout_below="@id/vendordetails_text"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/vnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/vnumber_text"
            android:padding="7dp"
            android:layout_marginLeft="215dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/vemail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/vname"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/vemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/vemail_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="215dp"
            />

        <TextView
            android:id="@+id/vaddress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/vnumber"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/vaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/vaddress_text"
            android:padding="7dp"
            android:layout_marginLeft="215dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/subT_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Total"
            android:layout_below="@id/vemail"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/subT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/subT_text"
            android:padding="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="285dp"
            />

        <TextView
            android:id="@+id/tax_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tax %(If any)"
            android:layout_below="@id/vemail"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/tax_text"
            android:padding="7dp"
            android:layout_marginLeft="155dp"
            android:layout_marginRight="145dp"
            />

        <TextView
            android:id="@+id/tot_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PO Total Value"
            android:layout_below="@id/vemail"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/tot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_below="@id/tot_text"
            android:padding="7dp"
            android:layout_marginLeft="285dp"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="cancel"
        android:textColor="#FFFFFF"
        android:padding="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="285dp"
        android:layout_marginTop="640dp"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:text="save"
        android:textColor="#FFFFFF"
        android:padding="7dp"
        android:layout_marginLeft="155dp"
        android:layout_marginRight="145dp"
        android:layout_marginTop="640dp"
        />

    <Button
        android:id="@+id/purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="purchase"
        android:textColor="#FFFFFF"
        android:padding="7dp"
        android:layout_marginLeft="285dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="640dp"
        />



</RelativeLayout>